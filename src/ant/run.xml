<project name="run">
    <path id="run.classpath">
        <path refid="compile.classpath" />
        <pathelement location="${classes.dir}" />
    </path>

    <target name="run.gui"
        description="Run the ImportScrubber GUI">
        <java classname="net.sourceforge.importscrubber.ImportScrubberGUI"
            classpathref="run.classpath"
            fork="true"
            spawn="${gui.spawn}"
            />
    </target>
</project>
